---
interface Props {
	todo: {
		id: number;
		text: string;
		user: string;
		timeAgo: string;
	};
}

const { todo } = Astro.props;
---

<div class="todo-card bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-4 border-l-4 border-green-500">
	<div class="flex items-start justify-between">
		<div class="flex-1">
			<p class="text-base text-gray-800 mb-1 leading-relaxed">{todo.text}</p>
			<div class="flex items-center text-sm text-gray-500">
				<span class="font-medium text-green-600">{todo.user}</span>
				<span class="mx-2">•</span>
				<span>{todo.timeAgo}</span>
			</div>
		</div>
		<div class="ml-4 flex-shrink-0">
			<div class="w-6 h-6 bg-green-100 rounded-full flex items-center justify-center">
				<span class="text-green-600 text-xs">✓</span>
			</div>
		</div>
	</div>
</div>