---
import Header from '../components/Header.astro';
import ToDoCard from '../components/ToDoCard.astro';
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';

// Sample data - this will later come from MongoDB
const recentTodos = [
	{ id: 1, text: "Learn Astro framework", user: "Dev Explorer", timeAgo: "2 hours ago" },
	{ id: 2, text: "Build a plant-themed todo app", user: "Green Coder", timeAgo: "4 hours ago" },
	{ id: 3, text: "Practice TailwindCSS styling", user: "CSS Master", timeAgo: "6 hours ago" },
];
---

<Layout>
	<Header />
	
	<!-- Hero Section -->
	<main class="h-screen bg-gradient-to-br from-green-50 to-emerald-100 flex flex-col">
		<!-- Plant emoji and intro text -->
		<section class="text-center py-6 px-8 flex-shrink-0">
			<!-- <div class="text-4xl mb-4">ðŸª´</div> -->
			<h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">Bored?</h1>
			<p class="text-lg md:text-xl text-gray-600 mb-4 max-w-2xl mx-auto">
				Want to procrastinate and look productive?
			</p>
			<h2 class="text-3xl md:text-5xl font-bold text-green-800 mb-8">
				Find Something ToDo
			</h2>
		</section>

		<!-- Current Todos Section -->
		<section class="max-w-4xl mx-auto px-8 flex-1 flex flex-col justify-center">
			<h3 class="text-xl md:text-2xl font-bold text-gray-800 mb-4 text-center">
				What people are currently ToDoing
			</h3>
			
			<div class="space-y-2 mb-6">
				{recentTodos.map(todo => (
					<ToDoCard todo={todo} />
				))}
			</div>

			<!-- Call to Action -->
			<div class="text-center">
				<h4 class="text-lg font-semibold text-gray-700 mb-3">Want to join the party?</h4>
				<div class="flex flex-col sm:flex-row gap-3 justify-center">
					<a href="/add" 
						class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-300">
						Add your ToDo
					</a>
					<a href="/browse" 
						class="bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-300">
						Browse all ToDos
					</a>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="text-center py-3 px-8 text-gray-600 text-sm flex-shrink-0">
			<p>Made by <a href="#" class="text-green-600 hover:text-green-700 underline">Grace Wambui</a> who writes code for your entertainment</p>
		</footer>
	</main>
</Layout>
